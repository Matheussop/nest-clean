{
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact", 
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["./"],
  "eslint.run": "onType",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    }
  },
  "[javascript]": {
    "editor.formatOnSave": false, 
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    }
  },
  "cSpell.words": [
    "postgres"
  ]
}
